{
  "extends": [
    "plugin:tailwindcss/recommended"
  ],
  "overrides": [
    {
      "parser": "@angular-eslint/template-parser",
      "files": [
        "*.html"
      ]
    },
    {
      "parser": "@typescript-eslint/parser",
      "files": [
        "*.ts",
        "*.js"
      ],
      "rules": {
        "indent": [
          "error",
          2
        ]
      }
    }
  ],
  "plugins": [
    "tailwindcss"
  ]
}